<view class="container">
    <view class="header">
        <v-eposide class="eposide" index="{{classic.index}}"/>
        <v-like class="like" bind:like="onLike" like="{{likeStatus}}" count="{{likeCount}}"/>
    </view>
    <v-movie img="{{classic.image}}" content="{{classic.content}}"/>
    <v-naiv class="naiv" bind:left="onNext" bind:right="onPrevious" title="{{classic.title}}" first="{{first}}" latest="{{latest}}" />
</view>