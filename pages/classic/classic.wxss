.container{
    display: flex;
    flex-direction: column;
    align-items: center;
    width: 100%;
}

.header{
    display: flex;
    flex-direction: row;
    height: 100rpx;
    align-items: center;
    /* 将点选与期刊分开两边 */
    justify-content: space-between;
    border-top: 1px solid #f5f5f5;
    border-bottom: 1px solid #f5f5f5;
    /* 没有设置宽度，会造成页面 */
    width: 100%;

}

